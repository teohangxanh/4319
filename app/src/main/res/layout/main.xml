<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/appBackground"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textColor="@color/appTitleText"
        android:text="@string/app_name" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/easyBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:onClick="onClick"
                android:contentDescription="@string/levelButton1"
                android:background="@drawable/catepillar"
                android:textColor="@color/appBackground"/>


            <Button
                android:id="@+id/mediumBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="@string/levelButton2"
                android:background="@drawable/pitbull"
                android:textColor="@color/appBackground"/>

            <Button
                android:id="@+id/difficultBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="@string/levelButton3"
                android:background="@drawable/tiger"
                android:textColor="@color/appBackground"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:text="Easy"
                android:textSize="20dp"
                android:textColor="@color/hint"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:text="Medium"
                android:textSize="20dp"
                android:textColor="@color/hint"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:text="Hard"
                android:textSize="20dp"
                android:textColor="@color/hint"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_horizontal"
        android:text="Choose an avatar"
        android:textSize="20dp"
        android:textColor="@color/hint" />

    <TextView
        android:id="@+id/randomNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/appTitleText"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="25dp"
        android:text="This is where the number appears" />

    <TextView
        android:id="@+id/inst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:text="Drag and drop in the box below to represent the number"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:textColor="@color/hint"/>


    <TextView
        android:id="@+id/myRectangleView"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:layout_height="240dp"
        android:textSize="30dp"
        android:textColor="@color/appTitleText"
        android:text="This is where you drag and drop a rectangle" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginHorizontal="100dp"
        android:textColor="#FF000000"
        android:background="#FFFFFF00"
        android:text="TRY AGAIN" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">
        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="5dp"
            android:text="Green = CONGRATULATION!"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#00FF00"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="5dp"
            android:text="Red = TRY AGAIN!"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#FF0000"
            android:gravity="center_horizontal" />
    </TableRow>

</LinearLayout>